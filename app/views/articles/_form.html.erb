<%= form_for @article do |f| %>
  <%= render 'common/error_messages', model: @article %>
    <div class="form-group">
      <%= f.label :Tytuł %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :Tekst %>
      <%= f.text_area :text, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :Tag %>
      <%= f.text_field :tags, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit 'Zapisz', class: "btn btn-primary" %>
    </div>

    <div class="form-group">
      <%= link_to 'Powrót', articles_path, class: "btn btn-primary" %>
    </div>
<% end %>
